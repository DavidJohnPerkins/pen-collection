<%- include('../includes/head.ejs') %>
	<link rel="stylesheet" href="/css/collection-item.css">
	</head>

	<body>
		<%- include('../includes/navigation.ejs') %>

			<main>
				<% if (items.length > 0) { %>
					<div class="grid">
						<% for (let item of items) { %>
							<article class="card map-item">
								<header class="map__header">
									<h1 class="map__title">
										<%= item.BRAND %>
									</h1>
									<h2 class="map__title">
										<%= item.MODEL_NAME %>
									</h2>
									<h2 class="map__title">
										<%= item.BODY_COLOUR %>
									</h2>
								</header>
								<div class="pen__image">
									<img src="pen-image/<%= item.IMAGE_1 %>" alt="<%= item.MODEL_NAME %>">
								</div>
								<div class="card__content">
									<p class="map_id">
										Id: <%= item.item_id %>
									</p>
								</div>
								<div class="card__actions">
									<a href="/penItem/<%= item.item_id %>" class="btn">Details</a>
								</div>
							</article>
							<% } %>
					</div>
					<% } else { %>
						<h1>No Maps Found</h1>
						<% } %>
			</main>
			<%- include('../includes/end.ejs') %>
